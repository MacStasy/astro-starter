---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  content: string;
  imagePath: string;
  altText: string;
  imagePathR: string;
  altTextRight: string;
  width: number;
  height: number;
}

const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
  { eager: true }
);

const imageSrc = images[block.imagePath]?.default;
const srcLeft =
  typeof imageSrc === "string"
    ? imageSrc.replace(/^\./, "/_cloudcannon")
    : imageSrc ?? block.imagePath;

if (!srcLeft) {
  throw new Error(
    `"${block.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
}

const imageSrcR = images[block.imagePathR]?.default;
const srcLeftR =
  typeof imageSrcR === "string"
    ? imageSrcR.replace(/^\./, "/_cloudcannon")
    : imageSrcR ?? block.imagePathR;

if (!srcLeftR) {
  throw new Error(
    `"${block.imagePathR}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
}
---

<div class="card">
  <h2>{block.title}</h2>
  <p>{block.content}</p>
  <Image
    src={srcLeft}
    alt={block.altText}
    width={block.width}
    height={block.height}
  />
  <Image
    src={srcLeftR}
    alt={block.altTextRight}
    width={block.width}
    height={block.height}
  />
  <Image
    src={srcLeft}
    alt={block.altText}
    width={block.width}
    height={block.height}
  />
</div>

<Image
  src={srcLeft}
  alt={block.altText}
  width={block.width}
  height={block.height}
/>
